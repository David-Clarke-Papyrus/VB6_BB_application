                    <NodeTemplate>
                        Nodetemp
                    </NodeTemplate>
                    <CurrentNodeTemplate>
                        cur
                    </CurrentNodeTemplate>
                    <PathSeparatorStyle Font-Bold="True" ForeColor="#507CD1" />
