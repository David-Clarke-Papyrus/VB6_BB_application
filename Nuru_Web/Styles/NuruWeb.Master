            <ContentTemplate>
                <asp:Panel ID="Msg1"  CssClass = "Msg" runat="server"  BackColor="#FFFFCC">
                    <asp:Button id="btnShowPopup" runat="server" style="display:none" 
                        onclick="btnShowPopup_Click" />
                    <asp:ModalPopupExtender id="mdlPopup" runat="server"
                        targetcontrolid="btnShowPopup" popupcontrolid="_pnlClientMessage_"
                        cancelcontrolid="btnClose" />
                    <div>
                    <asp:Label runat="server" ID = "_lblClientMessage_" CssClass = "MsgLabel"/>
                    </div>
                    <div>
                    <asp:Button ID="btnClose" runat="server" Text=" OK " CssClass = "MsgButton" CausesValidation="false" />
                    </div>
                </asp:Panel>
