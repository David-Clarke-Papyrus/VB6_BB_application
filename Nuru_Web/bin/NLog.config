<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}_Log.txt" layout="${longdate} ${message} ${exception:format=tostring}" />

    <target xsi:type="EventLog"
       name="event"
       layout="${message}"
       source="Nuru"
       eventId="555"
       log="Application"
					 />
  </targets>
  <rules>
    <logger name="*" minLevel="Error" writeTo="event" />
    <logger name="*" minLevel="Info" writeTo="logfile"/>
  </rules>
</nlog>


